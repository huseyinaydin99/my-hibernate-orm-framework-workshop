<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="tr.com.huseyinaydin.okul.Ogrenci" table="OGRENCI">
        <meta attribute="class-description">
            Öğrenci sınıfının detayları
        </meta>

        <id column="OGRENCI_ID" name="ogrenciId" type="long">
            <generator class="native"/>
        </id>

        <property column="OGRENCI_ADI" generated="never" lazy="false" length="100" name="ogrenciAdi" not-null="true" type="string"/>

        <set cascade="all" name="dersler" sort="unsorted" table="OGRENCI_DERS">
            <key column="OGRENCI_ID"/>
            <many-to-many class="tr.com.huseyinaydin.okul.Ders" column="DERS_ID" unique="false"/>
        </set>
    </class>
</hibernate-mapping>