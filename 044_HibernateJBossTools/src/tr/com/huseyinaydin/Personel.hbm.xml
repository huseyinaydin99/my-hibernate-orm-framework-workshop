<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="tr.com.huseyinaydin.Personel" table="PERSONEL">
        <meta attribute="class-description">Personel sınıfının detayları</meta>

        <id column="PERSONEL_ID" name="personelId" type="long">
            <generator class="native"/>
        </id>

        <property column="PERSONEL_ADI" generated="never" lazy="false" name="personelAdi" not-null="true" type="string"/>
    </class>
</hibernate-mapping>